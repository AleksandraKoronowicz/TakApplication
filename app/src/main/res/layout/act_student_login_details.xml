<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.application.tak.takapplication.actStudentLogin$PlaceholderFragment">

    <ScrollView
            android:id="@+id/login_form2"
            android:layout_width="match_parent"
            tools:ignore="UselessParent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_height="match_parent">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" app:cardElevation="7dp"
            android:layout_marginTop="45dp" android:layout_height="320dp">


        <RelativeLayout android:layout_width="match_parent" android:layout_height="326dp"
                        tools:ignore="ExtraText">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView"
                    android:contentDescription=""
                    app:srcCompat="@drawable/student"
                    android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                    tools:ignore="ContentDescription"/>


            <android.support.design.widget.FloatingActionButton
                    android:layout_width="90dp"
                    android:clickable="true"
                    app:fabSize="normal" app:srcCompat="@drawable/cooltext242812233487143"
                    android:id="@+id/fabGoToStudentTaSK"
                    android:layout_height="90dp" app:elevation="7dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp" android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                    android:layout_marginBottom="13dp"/>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="40dp" android:layout_marginRight="40dp"
                    android:layout_centerVertical="true" android:layout_centerHorizontal="true">
                <AutoCompleteTextView
                        android:id="@+id/phone_input"
                        android:layout_width="match_parent"
                        android:maxLines="1" android:textSize="25sp" android:textStyle="normal|bold"
                        android:textColorLink="?android:attr/textColorHighlightInverse"
                        android:inputType="phone"
                        android:layout_centerHorizontal="true"
                        android:layout_height="50dp"/>
                <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/telefon"
                        android:textAllCaps="false"
                        android:layout_below="@+id/textView_kod" android:layout_toRightOf="@+id/imageView"
                        android:layout_toEndOf="@+id/imageView" android:layout_weight="1"/>

            </android.support.design.widget.TextInputLayout>
            <TextView
                    android:id="@+id/textView_kod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Podaj telefon"
                    android:textSize="36sp" android:lineSpacingExtra="8sp"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="szczególy"
                    android:layout_below="@+id/imageView" android:layout_centerHorizontal="true"/>
            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="40dp" android:layout_marginRight="40dp"
                    android:layout_above="@+id/fabGoToStudentTaSK" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                <AutoCompleteTextView
                        android:id="@+id/email_input"
                        android:layout_width="match_parent"
                        android:maxLines="1" android:textSize="25sp" android:textStyle="normal|bold"
                        android:textColorLink="?android:attr/textColorHighlightInverse"
                        android:inputType="textEmailAddress"
                        android:layout_weight="1" android:layout_height="50dp"/>
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Krok 3 - dodaj szczegóły"
                    android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="11dp" android:textAllCaps="false"/>
            <AutoCompleteTextView
                    android:text="@string/akceptuje_regulamin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/regulamin"
                    android:focusable="false"
                    android:textSize="18sp"
                    android:cursorVisible="false" android:textIsSelectable="false"
                    android:inputType="none"
                    android:layout_alignTop="@+id/rbRegulaminAccept" android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbRegulaminAccept"
                    style="@style/AppTheme"
                    android:checked="false"
                    android:textSize="12sp"

                    android:layout_marginTop="16dp" android:layout_below="@+id/cv"
                    android:layout_centerHorizontal="true"/>


        </RelativeLayout>

</ScrollView>
</RelativeLayout>