<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.application.tak.takapplication.actStudentLogin$PlaceholderFragment">

    <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:text="@string/krok_2_podaj_kod"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/key"
            android:layout_marginLeft="21dp" android:layout_marginStart="21dp"
            android:id="@+id/imageView2" android:layout_above="@+id/textView"
            android:layout_toRightOf="@+id/section_label" android:layout_toEndOf="@+id/section_label"/>
    <TextView
            android:text="@string/tviewKod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="36sp" android:lineSpacingExtra="8sp"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="@string/tviewKod"
            android:layout_marginBottom="65dp" android:layout_above="@+id/editText"
            android:layout_alignLeft="@+id/editText" android:layout_alignStart="@+id/editText"
            android:layout_marginLeft="41dp" android:layout_marginStart="41dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            style="@android:style/Widget.Material.Light.TextView" android:textSize="24sp"
            android:textColor="?android:attr/colorControlNormal" android:textStyle="normal|bold"
            android:textColorLink="?android:attr/textColorHighlightInverse"
            tools:targetApi="lollipop"
            android:layout_marginRight="18dp" android:layout_marginEnd="18dp"
            tools:ignore="RelativeOverlap" android:layout_centerVertical="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>
