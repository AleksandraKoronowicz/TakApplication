<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.application.tak.takapplication.actStudentLogin$PlaceholderFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_student_alltask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:onClick="OnClickCardView"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            android:padding="9dp">

            <TextView
                android:id="@+id/student_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Pomożesz mi?"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAdresMap"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:background="?android:attr/actionModeSplitBackground"
                android:elevation="0dp"
                android:lineSpacingExtra="20sp"
                android:text="Tu mnie znajdziesz"
                android:textAlignment="inherit"
                android:textSize="14sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabChooseTask"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="true"

                app:elevation="5dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/cooltext242812233487143" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/pointorange" />

            <TextView
                android:id="@+id/student_date_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/student_question"
                android:text="25 lipca"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/student_task_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Wyrzuć śmieci"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorTertiary"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/student_task_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/student_name"
                android:text="16:00 do 17:00"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/student_date_task"
                android:text="Aleksandra Koronowicz"
                android:textAlignment="textStart"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="20sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>